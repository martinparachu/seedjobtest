node {
	if (params.run_update == true){  
 
 		stage('Init'){
      			git branch: 'master', changelog: false, poll: false, url: 'https://github.com/martinparachu/seedjobtest.git'
  		}
     
      		stage('Update Database'){
    
		  docker.image("postgres:11.5").inside('-u root:sudo') {
		    withCredentials([
			[
			  $class: 'UsernamePasswordMultiBinding',
			  credentialsId: "stg_userpass",
			  usernameVariable: 'stg_owner_user',
			  passwordVariable: 'stg_owner_password'
			],
			[
			  $class: 'UsernamePasswordMultiBinding',
			  credentialsId: "stg_app_userpass",
			  usernameVariable: 'stg_app_user',
			  passwordVariable: 'stg_app_password'
			],
			[
			  $class: 'UsernamePasswordMultiBinding',
			  credentialsId: "dev_userpass",
			  usernameVariable: 'dev_owner_user',
			  passwordVariable: 'dev_owner_password'
			],
			[
			  $class: 'UsernamePasswordMultiBinding',
			  credentialsId: "dev_app_userpass",
			  usernameVariable: 'dev_app_user',
			  passwordVariable: 'dev_app_password'
			],
			[            
			  $class: 'UsernamePasswordMultiBinding',
			  credentialsId: "val_userpass",
			  usernameVariable: 'val_owner_user',
			  passwordVariable: 'val_owner_password'
			]
		      ])
			{
			sh 'chmod +x ${WORKSPACE}/db_update.sh'
			sh '${WORKSPACE}/db_update.sh'
			}
            	   }
        	}
	}
}
